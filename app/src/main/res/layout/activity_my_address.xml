<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAddress">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Address 1"
            android:textStyle="bold"
            android:textColor="#000"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/strokeboarder"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="Sidhartha sekhar"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="8114613927"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:text="562112"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="Bengaluru,karnataka"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:text="Jain university, kanakapura campus"
                android:textSize="17sp"
                android:textStyle="normal" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Address 2"
            android:textStyle="bold"
            android:textColor="#000"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/strokeboarder"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="Sidhartha sekhar"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="8114613927"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:text="562112"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="Bengaluru,karnataka"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:text="Jain university, kanakapura campus"
                android:textSize="17sp"
                android:textStyle="normal" />

        </LinearLayout>

        <Button
            android:id="@+id/newaddress"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@color/startblue"
            android:text="Make A new Address"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearLx"
            android:background="@drawable/strokeboarder"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="2dp"
                android:textStyle="italic"
                android:textColor="#000"
                android:text="Full Name :"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:maxLength="25"
                android:paddingLeft="4dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/strokeboarder1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="2dp"

                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textColor="#000"
                android:text="Phone No.:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="number"
                android:maxLength="10"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:paddingLeft="4dp"
                android:background="@drawable/strokeboarder1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:layout_marginLeft="2dp"

                android:textColor="#000"
                android:text="Pincode :"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="number"
                android:maxLength="8"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:paddingLeft="4dp"
                android:background="@drawable/strokeboarder1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textColor="#000"
                android:layout_marginLeft="2dp"

                android:text="Town/City :"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:maxLength="20"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:paddingLeft="4dp"
                android:background="@drawable/strokeboarder1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="2dp"

                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textColor="#000"
                android:text="State :"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"

                android:maxLength="20"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:paddingLeft="4dp"
                android:background="@drawable/strokeboarder1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"

                android:textStyle="italic"
                android:textColor="#000"
                android:text="Flat/House No./Building/Apartment :"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:maxLength="100"
                android:maxLines="4"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:paddingLeft="4dp"
                android:background="@drawable/strokeboarder1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"

                android:textStyle="italic"
                android:textColor="#000"
                android:text="Area/Colony/Street/Sector/Village :"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:maxLength="100"
                android:maxLines="4"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:paddingLeft="4dp"
                android:background="@drawable/strokeboarder1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"

                android:textStyle="italic"
                android:textColor="#000"
                android:text="Landmark e.g. near apollo hospital :"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/strokeboarder1"
                android:inputType="text"
                android:maxLength="20"
                android:paddingLeft="4dp" />
            <Button
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:background="@color/startblue"
                android:text="Save AS Address 1"/>
            <Button
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:background="@color/startblue"
                android:text="Save AS Address 2"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>