<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_Details">
    <LinearLayout
        android:layout_margin="7dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Order Details"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <LinearLayout
            android:background="@drawable/strokeboarder"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:text="Order Date : 21-aug-2020"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:text="Order ID : 21-aug-2020"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:layout_marginBottom="7dp"
                android:text="Order Total : 21-aug-2020"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Shipment Details"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <LinearLayout
            android:background="@drawable/strokeboarder"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:text="Shipped"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:text="25-aug-2020"/>


            <LinearLayout
                android:id="@+id/order1"

                android:background="@drawable/strokeboarder"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="70dp"
                    android:scaleType="fitXY"
                    android:padding="2dp"
                    android:layout_height="100dp"
                    android:src="@drawable/b2"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Men Solid Pedded Jacket"
                        android:textStyle="italic"
                        android:layout_marginLeft="10dp"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price-INR 799"
                        android:textStyle="italic"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        />


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sold By : F4B"
                        android:textStyle="italic"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        />


                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:text="Color-black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:text="QTY-01"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:layout_marginBottom="7dp"
                android:text="Size-XL"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Shipping Address"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <LinearLayout
            android:background="@drawable/strokeboarder"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="normal"

                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:text="Sidhartha Sekhar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="Jain University ,Kanakapura campus\n Ramanagara\nBbengaluru,Karnataka\n562112\n8114613927"
                android:textSize="17sp"
                android:textStyle="normal" />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Order Summary"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <LinearLayout
            android:background="@drawable/strokeboarder"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="normal"
                    android:layout_marginLeft="7dp"
                    android:textSize="17sp"
                    android:text="Items:"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="7dp"
                    android:gravity="right"
                    android:text="700"
                    android:textSize="17sp"
                    android:textStyle="normal" />



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="normal"
                    android:layout_marginLeft="7dp"
                    android:textSize="17sp"
                    android:text="Postage and Packing:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:gravity="right"
                    android:textStyle="normal"
                    android:layout_marginRight="7dp"
                    android:text="+29"/>



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="normal"
                    android:layout_marginLeft="7dp"
                    android:textSize="17sp"
                    android:text="Tax:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:gravity="right"
                    android:textStyle="normal"
                    android:layout_marginRight="7dp"
                    android:text="+70"/>



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="normal"
                    android:layout_marginLeft="7dp"
                    android:textSize="17sp"
                    android:text="Total:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:gravity="right"
                    android:textStyle="normal"
                    android:layout_marginRight="7dp"
                    android:text="799"/>



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="normal"
                    android:layout_marginLeft="7dp"
                    android:textSize="17sp"
                    android:text="Promotion:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:gravity="right"
                    android:textStyle="normal"
                    android:layout_marginRight="7dp"
                    android:text="-50"/>



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="normal"
                    android:layout_marginLeft="7dp"
                    android:textSize="17sp"
                    android:text="Delivery charge:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:gravity="right"
                    android:textStyle="normal"
                    android:layout_marginRight="7dp"
                    android:text="+00"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginLeft="7dp"
                    android:textSize="20sp"
                    android:text="Order Total:"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:gravity="right"
                    android:textStyle="normal"
                    android:layout_marginRight="7dp"
                    android:text="749"/>



            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Payment Mode"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <LinearLayout
            android:background="@drawable/strokeboarder"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:textStyle="normal"
                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:text="POD/COD"/>



        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Return Scheme"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <LinearLayout
            android:background="@drawable/strokeboarder"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_margin="7dp"
                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:text="Expired after 15 days of delivery"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Rewards on this order"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <LinearLayout
            android:background="@drawable/strokeboarder"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_margin="7dp"
                android:layout_marginLeft="7dp"
                android:textSize="17sp"
                android:text="20 F4B points"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>